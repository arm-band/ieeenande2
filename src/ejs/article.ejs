<%- include("util/_init_load") %><%- include("util/_article_id") %><%- include("util/_article_urlconverter") %><%
var name = name; //gulpfile.jsで指定されたファイル名
var attributes = attributes;
var contentBody = body;
var returnNews = `${name}${pages}.html`;
contentBody = funcURLConverter(contentBody, relPath);
%><%- include("util/_headset_article", { config, id, attributes }) %>
<!DOCTYPE html>
<html lang="ja">
<head>
<%- include("partial/_head", { config, id, commonVar, metaTitle, metaDescription, metaOgpimage }) %>
</head>
<body data-offset="<%= navbarHeight %>" class="<%= id %>" id="<%= id %>">

<div id="wrapper">
<%- include("partial/_header", { config, id, commonVar }) %>

<%- include("partial/_eyecatch", { headerString }) %>

    <!-- main -->
    <main class="main <%= id %>main" id="<%= id %>main">
<%- include("partial/_breadcrumb_article", { config, id, returnNews, attributes }) %>
        <section class="container-fluid">
            <div class="row mb-4">
<%
var datetime = funcDateTimeFormat(attributes.date, "-", "");
var showDt = funcDateTimeFormat(attributes.date, "/", "");
var articleUrl = funcArticleUrl(config.commons.url, attributes);
%>
                <div class="col-12 news_card mb-3">
                    <article class="news_article" id="<%= attributes.url %>">
                        <div class="card">
<%
if(attributes.thumbnail !== null && attributes.thumbnail !== undefined) {
%>
                            <img class="card-img-top img-fluid" src="<%= relPath %><%- config.commons.newsthumbnail %><%- attributes.thumbnail %>" alt="<%= attributes.title %>">
<%
}
%>
                            <div class="card-body">
                                <h2 class="news_header"><%= attributes.title %></h2>
                                <div class="news_contents">
                                    <%- contentBody %>
                                </div>
                                <div class="news_share row my-4">
                                    <button type="button" class="btn news_btn news_btnTwitter col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="http://twitter.com/share?url=<%= articleUrl %>&text=<%= metaTitle %>%20%2d%20<%= config.commons.sitename %>" target="_blank" title="Twitterでツイート"><i class="fab fa-fw fa-twitter" aria-hidden="true"></i>ツイート</a></button>
                                    <button type="button" class="btn news_btn news_btnFacebook col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="https://www.facebook.com/sharer/sharer.php?u=<%= articleUrl %>" target="_blank" title="Facebookに投稿"><i class="fab fa-fw fa-facebook" aria-hidden="true"></i>投稿</a></button>
                                    <button type="button" class="btn news_btn news_btnGooglePlus col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="https://plus.google.com/share?url=<%= articleUrl %>" target="_blank" title="Google+に投稿"><i class="fab fa-fw fa-google-plus" aria-hidden="true"></i>投稿</a></button>
                                    <button type="button" class="btn news_btn news_btnLine col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="http://line.me/R/msg/text/?<%= metaTitle %>%20%2d%20<%= config.commons.sitename %>%20<%= articleUrl %>" target="_blank" title="LINEトークに送る"><i class="fas fa-fw fa-comment" aria-hidden="true"></i>送る</a></button>
                                    <button type="button" class="btn news_btn news_btnPocket col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="https://getpocket.com/edit?url=<%= articleUrl %>" target="_blank" title="Pocketに保存"><i class="fab fa-fw fa-get-pocket" aria-hidden="true"></i>あとで</a></button>
                                    <button type="button" class="btn news_btn news_btnRss col-4 col-lg-2 col-xl-1 mx-1 mb-3"><a href="https://feedly.com/i/subscription/feed/<%= config.commons.url %>rss.xml" target="_blank" title="Feedlyに登録"><i class="fas fa-fw fa-rss" aria-hidden="true"></i>Feedly</a></button>
                                </div>
                            </div>
                            <div class="card-body">
                                <time class="news_createtime d-block text-right" datetime="<%= datetime %>"><%= showDt %></time>
                            </div>
                        </div>
                    </article>
                </div>
            </div>
            <div class="mb-4"><a href="<%= relPath %>news/<%= returnNews %>" class="btn btn-light">記事一覧に戻る</a></div>
        </section>
    </main>
    <!-- /main -->

<%- include("partial/_footer", { config, id, copyRightYear }) %>

</div>

<%- include("partial/_js_loader", { config, id }) %>
</body>
</html>