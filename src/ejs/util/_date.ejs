<%
//記事の日時を文字列として出力する
funcDateTimeFormat = (dateStr, optStr, output) => {
    var day = new Date(dateStr);
    var y = day.getFullYear();
    var m = day.getMonth() + 1;
    var d = day.getDate();
    var hr = day.getHours();
    var mt = day.getMinutes();
    var sc = day.getSeconds();
    if (m < 10) {
        m = "0" + m;
    }
    if (d < 10) {
        d = "0" + d;
    }
    if (mt < 10) {
        mt = "0" + mt;
    }
    if (sc < 10) {
        sc = "0" + sc;
    }

    if(optStr.length === 0) {
        optStr = "-";
    }

    var datetime;
    if(output === "ymd") {
        datetime = `${y}${m}${d}`;
    }
    else {
        datetime = y + optStr + m + optStr + d + " " + hr + ":" + mt + ":" + sc;
    }

    return datetime;
}
%>